@import "cssreset.css"

$screenWidthSmaller_900 = "screen and (max-width: 900px)"
MAINWIDTH = 1140px
html
  height: 100%
body
  font-family: "Open Sans",Arial,"Hiragino Sans GB","Microsoft YaHei","微软雅黑","STHeiti","WenQuanYi Micro Hei",SimSun,sans-serif
  height: 100%
  min-width: 320px
  text-align: center
  background-color: black
  #btn1
    position: relative
    top: 0px
    left: 0px
    display: inline-block
    width: 70px
    height: 70px
    border-radius: 99px
    background: #333333
    cursor: pointer
    margin: 40px auto 40px auto
    box-shadow: inset  -1px 1px 3px 1px #1f1f1f, inset 1px -1px 3px 2px #6d6d6d, 0 0 20px 0 #066c86
    animation: normal-move 5s infinite
    &:hover
      animation: hover-move 2s 1s infinite, mouse-in-move 1s
    img.trai
      width: 20px
      position: absolute
      top: 23px
      left: 28px
@keyframes normal-move
  0%
    box-shadow: inset  -1px 1px 3px 1px #1f1f1f, inset 1px -1px 3px 2px #6d6d6d, 0 0 20px 0 #066c86
  50%
    box-shadow: inset -1px 1px 3px 1px #6d6d6d, inset 1px -1px 3px 2px #1f1f1f, 0 0 30px 0 #00ccff
  100%
    box-shadow: inset -1px 1px 3px 1px #1f1f1f, inset 1px -1px 3px 2px #6d6d6d, 0 0 20px 0 #066c86

@keyframes hover-move
  0%
    box-shadow: inset -1px 1px 3px 1px #1f1f1f, inset 1px -1px 3px 2px #6d6d6d, 0 0 10px 0 #982d70
  50%
    box-shadow: inset -1px 1px 3px 1px #6d6d6d, inset 1px -1px 3px 2px #1f1f1f, 0 0 43px 0 #ff009f
  100%
    box-shadow: inset -1px 1px 3px 1px #1f1f1f, inset 1px -1px 3px 2px #6d6d6d, 0 0 10px 0 #982d70 

@keyframes mouse-in-move
  0%
    box-shadow: inset -1px 1px 3px 1px #6d6d6d, inset 1px -1px 3px 2px #1f1f1f, 0 0 30px 0 #00ccff
  100%
    box-shadow: inset -1px 1px 3px 1px #1f1f1f, inset 1px -1px 3px 2px #6d6d6d, 0 0 10px 0 #982d70
  